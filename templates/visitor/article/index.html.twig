{% extends 'base.html.twig' %}

{% block title %}
    Accueil Sebfony
{% endblock %}

{% block body %}

    <h1>Bienvenue sur Sebfony</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>CATEGORIES</th>
                    <td></td> 
                </tr>
            </thead>
            <tbody>
                {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.nom }}</td> 
                    <td> <a href="{{ path('visitor_categorie_show', {'id': categorie.id}) }}"> Consulter la catégorie </a> </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5"> Aucune catégorie créée. </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <table class="table">
            <thead>
                <tr>
                    <th>ARTICLES</th>
                    <th>Titre</th>
                    <th>Contenu</th>
                    <th>Date</th>
                    <th>Catégorie</th>
                    <th>Auteur</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td> {% if article.logo !='' %}
                            <img src={{ article.logo }} height="50" width="50">
                            {% endif %}
                        </td>
                        <td> {{ article.titre }} </td>
                        <td> {{ article.contenu }} </td>
                        <td> {{ article.date ? article.date|date('d-m-Y H:i:s') : '' }} </td>
                        <td> {{ article.categorie }} </td>
                        <td> {{ article.user }} </td>
                        <td> <a href="{{ path('visitor_article_show', {'id': article.id}) }}"> Lire l'article </a> </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5"> Aucun article créé </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

{% endblock %}
