{% extends 'base.html.twig' %}

{% block title %} Sebfony - {{ article.titre }} {% endblock %}

{% block categories %}
{% endblock %}

{% block body %}

<br>
<br>
<a href="{{ path('app_home') }}"> Revenir Ã  l'accueil </a>
<h1> {{ article.titre }} </h1>
<br>
    <table class="table">
        <tbody>
            <tr>
                <td> {{ article.contenu }} </td>
            </tr>
            <tr>  
                <td> <img src={{ article.logo }}> </td>
            </tr>
            <tr>
                <td>{{ article.date ? article.date|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table">
        <thead>
            <tr>
                <th>Commentaires</th>
                <th>Auteur</th>
                <th>Date</th>
            </tr>
        </thead>
        <br>
        <tbody>
            {% for commentaire in commentaires %}
                <tr>
                    <td> {{ commentaire.contenu }} </td>
                    <td> {{ commentaire.auteur ? commentaire.auteur : "Anonyme"}} </td>
                    <td> {{commentaire.date ? commentaire.date|date('d-m-Y H:i:s') : '' }} </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
