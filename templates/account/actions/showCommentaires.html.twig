
{% extends 'account/baseAccount.html.twig' %}


{% block title %}Sebfony - Vos commentaires{% endblock %}

{% block body %}

<br>
<br>
  <a href="{{ path('app_account') }}">Retour à l'accueil</a>
    <h1>Vos commentaires</h1>
    <br>
    <table class="table">

    <caption align="top" style="color:orange">Vos commentaires en attente de validation :</caption>
        <tbody>
            {% for commentaire in commentairesValid %}
            
                <tr>
                    <th></th>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <th>Commentaire</th>
                    <td>{{ commentaire.contenu }}</td>
                    <td>{{ commentaire.date ? commentaire.date|date('d-m-Y H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th></th>
                    <td>Lire l'article commenté : <a href="{{ path('user_article_show', {'id': commentaire.article.id}) }}">{{ commentaire.article.titre }}</a></td>
                    <td>{{ include('account/actions/_deleteCom_form.html.twig') }}</td>
                </tr>

            {% else %}

                <tr>
                    <td colspan="5">Aucun</td>
                </tr>
           
            {% endfor %}
            
        </tbody>

    </table>
<br>
    <table class="table">

    <caption align="top" style="color:#49c33e">Vos commentaires validés :</caption>
        <tbody>
            {% for commentaire in commentairesNotValid %}
           
                <tr>
                    <th></th>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <th>Commentaire</th>
                    <td>{{ commentaire.contenu }}</td>
                    <td>{{ commentaire.date ? commentaire.date|date('d-m-Y H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th></th>
                    <td>Lire l'article commenté : <a href="{{ path('user_article_show', {'id': commentaire.article.id}) }}">{{ commentaire.article.titre }}</a></td>
                    <td>{{ include('account/actions/_deleteCom_form.html.twig') }}</td>
                </tr>
             
            {% else %}

                <tr>
                    <td colspan="5">Aucun</td>
                </tr>
            
            {% endfor %}

        </tbody>

    </table>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

{% endblock %}
