{% extends 'account/baseAccount.html.twig' %}

{% block title %}Article{% endblock %}

{% block categories %}{% endblock %}

{% block body %}
<br>
<br>

  <h1>{{ categorie.nom }}</h1>
    <a href="{{ path('app_account') }}">Revenir à l'accueil</a>
  

   <table class="table">
        <thead>
            <tr>
            <th>Logo</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>Catégorie</th>
                <th>Auteur</th>

            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
              <td>{% if article.logo !='' %}
                <img src={{ article.logo }} height="50" width="50">
                {% endif %}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.contenu }}</td>
              
             
                <td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.categorie }}</td>
                   <td>{{ article.user }}</td>
                <td>
                    <a href="{{ path('user_article_show', {'id': article.id}) }}">LIRE</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
